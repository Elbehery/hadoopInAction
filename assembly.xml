<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>${platform.version}</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/conf</directory>
            <outputDirectory>/conf</outputDirectory>
            <fileMode>755</fileMode>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*:hbase-client:*</include>
                <include>*:hbase-common:*</include>
                <include>*:hbase-protocol:*</include>
                <include>*:hbase-server:*</include>
                <include>*:hbase-prefix-tree:*</include>
                <include>*:hbase-hadoop-compat:*</include>
                <include>*:hbase-hadoop2-compat:*</include>
                <include>*:high-scale-lib:*</include>
                <include>*:htrace-core:*</include>
                <include>*:infra-core:*</include>
                <include>*:RiskDataRead-interface:*</include>
                <include>*:rtdp-business-logging:*</include>
                <include>*:uKernelCore:*</include>
                <include>*:simulation-client-framework:*</include>
                <include>*:infra-jsse:*</include>
                <include>*:infra-core:*</include>
                <include>*:infra:*</include>
                <include>*:foundation-core:*</include>
                <include>*:idiriskaccess-service-api:*</include>
                <include>*:workflow-engine:*</include>
                <include>*:simcontroller-framework:*</include>
                <include>*:simulation-configuration:*</include>
                <include>*:rtdp-monitoring:*</include>
                <include>*:rtdp-business-logging:*</include>
                <include>*:protobuf-java:*</include>
                <include>*:protocol-buffers:*</include>
                <include>*:idi-dto:*</include>
                <include>*:uKernel:*</include>
                <include>*:uKernelCore:*</include>
                <include>*:commons-lang:*</include>
                <include>*:httpcore:*</include>
                <include>*:log4j:*</include>
                <include>*:spring-context:*</include>
                <include>*:spring-aop:*</include>
                <include>*:spring-core:*</include>
                <include>*:spring-expression:*</include>
                <include>*:spring-asm:*</include>
                <include>*:spring-beans:*</include>
                <include>*:commons-logging:*</include>
                <include>*:commons-configuration:*</include>
                <include>*:commons-io:*</include>
                <include>*:cloning:*</include>
                <include>*:objenesis:*</include>
                <include>*:rollup-fmk-api:*</include>
                <include>*:bom-api:*</include>
                <include>*:edge-containers:*</include>
                <include>*:jackson-core:*</include>
                <include>*:jackson-core-asl:*</include>
                <include>*:jackson-databind:*</include>
                <include>*:jackson-annotations:*</include>
                <include>*:jackson-jaxrs:*</include>
                <include>*:jackson-mapper-asl:*</include>
                <include>*:edge-framework:*</include>
                <include>*:common-vo:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>